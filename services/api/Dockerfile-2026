FROM python:3.11-slim

ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1

WORKDIR /app

RUN apt-get update && apt-get install -y --no-install-recommends \
    curl gcc \
  && rm -rf /var/lib/apt/lists/*

RUN pip install --no-cache-dir uv==0.5.16

# Install API deps (service-level), not repo root
COPY services/api/pyproject.toml /app/pyproject.toml
COPY packages/schemas /packages/schemas

RUN uv pip install --system -e /packages/schemas
RUN uv pip install --system -e /app

# Copy API source
COPY services/api /app

EXPOSE 8000
